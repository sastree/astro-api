---
const response = await fetch('https://api.nasa.gov/planetary/apod?api_key=fvKuujPyqJwYfeToP16jxt9wHGqHHuYguJbO15IC') /* peticion a la api */
const data = await response.json(); /* esperamos respuesta y guardamos en variable data en formato json*/
console.log(data); /* Mostramos por consola */
const imgUrl = data.url; /* url de la imagen diaria de la nasa (APOD)*/
const explicacion = data.explanation; /* Texto explicatorio de la imagen */
const date = data.date; /* Fecha de la imagen */
const tipo = data.media_type;
---
<!-- Html donde muestro los datos consultados a la api -->
<section class="cuerpo">
    <div class="contenedor_img">
        <img id="imagen" src={imgUrl} hidden={tipo === 'video'}/>
        <iframe id="yt" width="100%" height="100%" hidden={tipo !== 'video'}
        src={imgUrl}>
        </iframe>
    </div>

    <div class="texto">
        <div id="contador"></div>
        <h1 id="fecha">{date}</h1>
        <p id="desc">{explicacion}</p>
    </div>
</section>

